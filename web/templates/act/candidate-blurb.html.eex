<% use = @candidate || @closest_candidate %>
<%
  prompt = case @candidate do
    nil -> "You're near #{use["title"]}'s district! (#{use["metadata"]["district"]})"
    %{} -> "You're in #{use["title"]}'s district!"
  end
%>

<% name = use["title"] %>
<% url = use["metadata"]["domain_name"] %>

<%= if @mobile do %>
  <div class="candidate-blurb">
    <div class="candidate-flex">
      <div class="blurb-header">
        <%= prompt %>
      </div>
      <img class="blurb-image" src="<%= use["metadata"]["small_picture"]["imgix_url"] %>" />
      <div class="blurb">
        <%= raw(use["metadata"]["short_story"]) %>
      </div>
    </div>
    <div class="learn-more">
      Learn more about <%= name %> <a href="<%= url %>"> here </a>.
    </div>
  </div>
<% else %>
  <div class="candidate-blurb">
    <div class="candidate-flex">
      <div>
        <div class="blurb-header">
          <%= prompt %>
        </div>
        <div class="blurb">
          <%= raw(use["metadata"]["short_story"]) %>
        </div>
      </div>
      <img class="blurb-image" src="<%= use["metadata"]["small_picture"]["imgix_url"] %>" />
    </div>
    <div class="learn-more">
      Learn more about <%= name %> <a href="<%= url %>"> here </a>.
    </div>
  </div>
<% end %>

<style>
.candidate-blurb {
  border: 1px solid black;
  padding: 10px;
  margin-top: 10px;
}

.candidate-flex {
  display: flex;
  <%= if @mobile do %>
    flex-direction: column;
    align-items: center;
  <% end %>
}

.blurb-image {
  width: 36%;
  height: 100%;
  float: right;
  margin-left: 5px;
  <%= if @mobile do %>
    width: 75%;
    margin-top: 5px;
    margin-bottom: 5px;
  <% end %>
}

.candidate-blurb p {
  margin: 10px;
  font-style: italic;
}
</style>
